@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>Profil adatok módosítása</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post" class="py-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="mb-3">
            <input asp-for="Username" class="form-control" disabled placeholder="" />
        </div>
        <div class="mb-3">
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+(36)30/1234567" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="my-3">
            <button id="update-profile-button" type="submit" class="btn btn-primary rounded-5">Mentés</button>
        </div>
    </div>
</form>

@section Scripts {
@* <partial name="_ValidationScriptsPartial" /> *@
}
