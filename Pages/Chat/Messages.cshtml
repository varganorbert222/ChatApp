@page
@model MessagesModel
@{
    Layout = "_AfterLoginLayout";
}

<head>
    <link rel="stylesheet" href="/css/messages.css" asp-append-version="true" />
</head>

<div class="chat-app">
    <div class="col-chat-left">
        <div class="row px-2 mt-2 align-items-center">
            <div class="col-4">
                <button id="id_avatar_menu_button" type="button" class="btn btn-avatar" data-bs-toggle="popover"
                    data-bs-placement="bottom" data-bs-offset="10,20" data-bs-trigger="focus"
                    data-content-id="id_popover_menu">
                    <img class="avatar-small" src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                </button>
            </div>
            <div class="col-4 text-center">
                <h6 class="m-0">Chatek</h6>
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-icon btn-icon-blue float-right" data-bs-toggle="tooltip"
                    data-bs-trigger="hover" title="Új üzenet írása"><i class="bi bi-pencil-square"></i></button>
            </div>
            <div class="col-12">
                <div class="input-group px-2 mt-3 mb-2 search-input-group">
                    <i class="bi bi-search"></i>
                    <input type="text" class="form-control" placeholder="Keresés..." aria-label="Search"
                        aria-describedby="search-input">
                </div>
            </div>
        </div>
        <div id="plist" class="people-list">
            <ul class="list-unstyled chat-list mt-2 mb-0">
                <li>
                    <div class="people-list-item">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                        <div class="about">
                            <div class="name">Vincent Porter</div>
                            <div class="status"> <i class="bi bi-circle-fill offline"></i> left 7 mins ago </div>
                        </div>
                    </div>

                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
                <li>
                    <div class="people-list-item active">
                        <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                        <div class="about">
                            <div class="name">Aiden Chavez</div>
                            <div class="status"> <i class="bi bi-circle-fill online"></i> online </div>
                        </div>
                    </div>

                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
                <li>
                    <div class="people-list-item">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="avatar">
                        <div class="about">
                            <div class="name">Mike Thomas</div>
                            <div class="status"> <i class="bi bi-circle-fill online"></i> online </div>
                        </div>
                    </div>
                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
                <li>
                    <div class="people-list-item">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                        <div class="about">
                            <div class="name">Christian Kelly</div>
                            <div class="status"> <i class="bi bi-circle-fill offline"></i> left 10 hours ago </div>
                        </div>
                    </div>
                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
                <li>
                    <div class="people-list-item">
                        <img src="https://bootdey.com/img/Content/avatar/avatar8.png" alt="avatar">
                        <div class="about">
                            <div class="name">Monica Ward</div>
                            <div class="status"> <i class="bi bi-circle-fill online"></i> online </div>
                        </div>
                    </div>

                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
                <li>
                    <div class="people-list-item">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="avatar">
                        <div class="about">
                            <div class="name">Dean Henry</div>
                            <div class="status"> <i class="bi bi-circle-fill offline"></i> offline since Oct 28 </div>
                        </div>
                    </div>

                    <div class="container-btn-float">
                        <button type="button" class="btn btn-float" data-bs-toggle="popover" data-bs-placement="bottom"
                            data-bs-offset="10,20" data-bs-trigger="focus" data-content-id="id_popover_people_menu">
                            <i class="bi bi-three-dots"></i>
                        </button>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-chat-center p-0 border-start border-end">
        <div class="chat">
            <div class="chat-header border-bottom clearfix">
                <div class="row align-items-center">
                    <div class="col-6">
                        <button type="button" class="btn btn-profile d-flex align-items-center">
                            <img class="avatar-small" src="https://bootdey.com/img/Content/avatar/avatar7.png"
                                alt="avatar">
                            <h6 class="align-middle m-0 mx-2">Christian Kelly</h6>
                        </button>
                    </div>
                    <div class="col-6 text-end">
                        <div class="d-flex float-right">
                            <button type="button" class="btn btn-icon btn-icon-blue" data-bs-toggle="tooltip"
                                data-bs-trigger="hover" title="Hanghívás indítása"><i
                                    class="bi bi-telephone-fill"></i></button>
                            <button type="button" class="btn btn-icon btn-icon-blue" data-bs-toggle="tooltip"
                                data-bs-trigger="hover" title="Videóhívás indítása"><i
                                    class="bi bi-camera-video-fill"></i></button>
                            <button id="id_btn_chat_data" type="button" class="btn btn-icon btn-icon-blue"
                                data-bs-toggle="tooltip" data-bs-trigger="hover" title="Beszélgetés adatai"><i
                                    class="bi bi-three-dots"></i></button>
                        </div>
                    </div>
                </div>

                <div id="id_chat_history_search" class="px-2 d-none">
                    <div class="input-group ps-2 my-2 search-input-group">
                        <i class="bi bi-search"></i>
                        <input id="id_input_chat_search" type="text" class="form-control" placeholder="Keresés..."
                            aria-label="Search" aria-describedby="search-input">
                        <button type="button" class="btn btn-icon btn-icon-blue">
                            <i class="bi bi-arrow-up-circle-fill"></i>
                        </button>
                        <button type="button" class="btn btn-icon btn-icon-blue">
                            <i class="bi bi-arrow-down-circle-fill"></i>
                        </button>
                        <button id="id_btn_chat_messages_search" type="button" class="btn btn-icon btn-icon-blue">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="chat-history">
                <ul class="mb-0">
                    <li>
                        <div class="message-data text-right">
                            <span class="message-data-time">10:10 AM, Today</span>
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                        </div>
                        <div class="message other-message float-right"> Hi Aiden, how are you? How is the
                            project coming along? </div>
                    </li>
                    <li>
                        <div class="message-data">
                            <span class="message-data-time">10:12 AM, Today</span>
                        </div>
                        <div class="message my-message">Are we meeting today?</div>
                    </li>
                    <li>
                        <div class="message-data">
                            <span class="message-data-time">10:15 AM, Today</span>
                        </div>
                        <div class="message my-message">Project has been already finished and I have results to
                            show you.</div>
                    </li>
                </ul>
            </div>
            <div class="chat-message d-flex pb-2">
                <button type="button" class="btn btn-icon btn-icon-blue mx-1" data-bs-toggle="tooltip"
                    data-bs-trigger="hover" title="Hangfájl küldése"><i class="bi bi-mic-fill"></i></button>
                <button type="button" class="btn btn-icon btn-icon-blue mx-1" data-bs-toggle="tooltip"
                    data-bs-trigger="hover" title="Fájl csatolása"><i class="bi bi-card-image"></i></button>
                <div class="input-group mb-0 search-input-group">
                    <input type="text" class="form-control message-input" placeholder="Aa" aria-label="Aa"
                        aria-describedby="aa-input">
                    <div data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-title="Hangulatjel kiválasztása">
                        <a tabindex="0" role="button" class="btn btn-icon btn-icon-blue" data-bs-toggle="popover"
                            data-bs-placement="top" data-bs-offset="10,20" data-bs-trigger="focus"
                            data-content-id="id_popover_emoji">
                            <i class="bi bi-emoji-smile-fill"></i>
                        </a>
                    </div>
                </div>
                <button type="button" class="btn btn-icon btn-icon-blue mx-1" data-bs-toggle="tooltip"
                    data-bs-trigger="hover" title="Küldés enterrel"><i class="bi bi-send-fill"></i></button>
            </div>
        </div>
    </div>
    <div id="id_chat_data" class="col-chat-right">
        <div class="row">
            <div class="col-12">
                <div class="d-flex flex-column align-items-center pt-2">
                    <a href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#view_info">
                        <img class="avatar-large" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">
                    </a>
                    <h6 class="align-middle m-0 mx-2">Christian Kelly</h6>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <div class="col-12">
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Chat testreszabása
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-type"></i>
                                    Becenevek módosítása
                                </button>
                                <button id="id_btn_chat_history_search" class="btn btn-accordion" type="button">
                                    <i class="bi bi-search"></i>
                                    Keresés a beszélgetésben
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Médiatartalom és fájlok
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-images"></i>
                                    Médiatartalom
                                </button>
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-file-text-fill"></i>
                                    Fájlok
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Személyes adatok védelme és támogatás
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-bell-slash-fill"></i>
                                    Értesítések némítása
                                </button>
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-slash-circle-fill"></i>
                                    Üzenetek figyelmen kívül hagyása
                                </button>
                                <button class="btn btn-accordion" type="button">
                                    <i class="bi bi-dash-circle-fill"></i>
                                    Tiltás
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- popover menu content -->
<div id="id_popover_menu" class="d-none">
    <a role="button" data-bs-toggle="modal" data-bs-target="#id_settings_modal" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-gear-fill"></i>
        </div>
        <span>Beállítások</span>
    </a>
    <hr>
    <a class="popover-menu-list-item" asp-area="Identity" asp-page="/Account/Manage/Index">
        <div class="circle-icon">
            <i class="bi bi-person-fill"></i>
        </div>
        <span>Profilom</span>
    </a>
    <a class="popover-menu-list-item" href="#">
        <div class="circle-icon">
            <i class="bi bi-archive-fill"></i>
        </div>
        <span>Archivált chatek</span>
    </a>
    <hr>
    <a role="button" data-bs-toggle="modal" data-bs-target="#id_about_modal" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-info-circle-fill"></i>
        </div>
        <span>Névjegy</span>
    </a>
    <hr>
    <a class="popover-menu-list-item" asp-area="Identity" asp-page="/Account/Logout">
        <div class="circle-icon">
            <i class="bi bi-door-open-fill"></i>
        </div>
        <span>Kijelentkezés</span>
    </a>
</div>

<!-- popover emoji content -->
<div id="id_popover_emoji" class="d-none">
    <h1>Teszt...</h1>
</div>

<!-- popover people menu content -->
<div id="id_popover_people_menu" class="d-none">
    <a href="#" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-check2"></i>
        </div>
        <span>Megjelölés olvasatlanként</span>
    </a>
    <a href="#" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-bell-slash-fill"></i>
        </div>
        <span>Értesítések némítása</span>
    </a>
    <a href="#" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-person-fill"></i>
        </div>
        <span>Profil megtekintése</span>
    </a>
    <hr>
    <a href="#" class="popover-menu-list-item" href="#">
        <div class="circle-icon">
            <i class="bi bi-telephone-fill"></i>
        </div>
        <span>Hanghívás</span>
    </a>
    <a href="#" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-camera-video-fill"></i>
        </div>
        <span>Videóhívás</span>
    </a>
    <hr>
    <a href="#" class="popover-menu-list-item" href="#">
        <div class="circle-icon">
            <i class="bi bi-archive-fill"></i>
        </div>
        <span>Chat archiválása</span>
    </a>
    <a href="#" class="popover-menu-list-item">
        <div class="circle-icon">
            <i class="bi bi-trash-fill"></i>
        </div>
        <span>Chat törlése</span>
    </a>
</div>

<!-- Settings modal -->
<div class="modal fade" id="id_settings_modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header px-0">
                <div class="row mx-0 align-items-center">
                    <div class="col">
                    </div>
                    <div class="col">
                        <h6 class="modal-title text-center" id="exampleModalLabel">Beállítások</h6>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-icon btn-icon-grey float-end" data-bs-dismiss="modal"
                            aria-label="Close">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-body pb-5">
                <h6>Fiók</h6>
                <a class="popover-menu-list-item h-auto p-1" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <img class="avatar-large" src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                    <div class="mx-2">
                        <h6 class="align-middle m-0">Aiden Chavez</h6>
                        <div class="text-muted">A profilod megjelenítése</div>
                    </div>
                </a>
                <hr>
                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="circle-icon">
                            <i class="bi bi-app-indicator"></i>
                        </div>
                        <h6 class="mx-2 my-0">Elérhető állapot</h6>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="circle-icon">
                            <i class="bi bi-volume-up-fill"></i>
                        </div>
                        <h6 class="mx-2 my-0">Értesítések hangjai</h6>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About modal -->
<div class="modal fade" id="id_about_modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header px-0">
                <div class="row mx-0 align-items-center">
                    <div class="col">
                    </div>
                    <div class="col">
                        <h6 class="modal-title text-center" id="exampleModalLabel">Névjegy</h6>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-icon btn-icon-grey float-end" data-bs-dismiss="modal"
                            aria-label="Close">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-body pb-5">
                <div class="d-flex flex-column align-items-center justify-content-center">
                    <div class="bi bi-chat-dots-fill login-logo py-1"></div>
                    <h5>Csevegés bárhol és bármikor</h5>
                    <div class="text-muted py-2">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
