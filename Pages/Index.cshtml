@page
@model IndexModel
@{
    ViewData["Title"] = "ChatApp";
}

<div class="row align-items-center" style="min-height: 100vh;">
    <div class="col-12 text-center">
        <div class="bi bi-chat-dots-fill login-logo py-5"></div>
        <h1>Csevegés bárhol és bármikor</h1>
        <form id="account" method="post" class="py-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex align-items-center flex-column">
                <div class="mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                        placeholder="E-mail cím" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                        aria-required="true" placeholder="Jelszó" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="my-3">
                <button id="login-submit" type="submit" class="btn btn-lg btn-primary btn-rounded">Tovább</button>
            </div>
            <div class="my-5">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <div class="d-inline text-muted">
                            Bejelentkezve maradok.
                        </div>
                    </label>
                </div>
            </div>
            <div class="d-flex align-items-center flex-row justify-content-center fixed-bottom mb-5">
                <p class="px-2">
                    <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword">Elfelejtetted a
                        jelszavad?</a>
                </p>
                <p class="px-2">
                    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl">Még nincs
                        fiókod?</a>
                </p>
                <p class="px-2">
                    <a id="resend-confirmation" asp-area="Identity" asp-page="/Account/ResendEmailConfirmation">Aktiváló
                        e-mail újraküldése</a>
                </p>
            </div>
        </form>
    </div>
</div>